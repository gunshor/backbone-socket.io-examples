<script>
    
    jQuery(function() {
    
    //-- Backbone Objects --------------------------------------------------//
        
        //-- Models --------------------------------------------------------//
        
            var Article = Backbone.Model;
        
        
        //-- Collections ---------------------------------------------------//
        
            var Articles = Backbone.Collection.extend({ 
                model: Article 
            });
            
            
        //-- Views ---------------------------------------------------------//
            
            var Posts = Backbone.View.extend({
                
                initialize: function() {
                    
                    var that = this;
                    
                    $.get("/template/article", function(data) {
 
                        that.collection.bind("add", function(model) {   
                            $("#content").append(_.template(data, model.toJSON()));
                        });
                        
                    });         
                }
                
            });
        
        
        //-- Create instances ----------------------------------------------//
        
            var articles = new Articles();
            
            var posts = new Posts({
                collection: articles
            });
                
      
    //-- Socket.IO ---------------------------------------------------------//
        
        var socket = io.connect('http://localhost');                      
        
        // Receive Article Data
        socket.on('articles', function(data) {
            
            articles.add(data);
            
        });
        
    });
</script>